{
    "linkPatterns.rules": [
        {
            "from": [
                {
                    "includes": "doc/*.md",
                    "patterns": "([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})"
                }
            ],
            "to": [
                {
                    "includes": "src/*.yaml",
                    "patterns": "id: ([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})",
                    "hoverPreview": {
                        "linesBefore": 0,
                        "linesAfter": 3
                    }
                }
            ]
        }
    ]
}
