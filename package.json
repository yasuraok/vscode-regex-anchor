{
  "name": "regex-anchor",
  "displayName": "Regex Anchor",
  "description": "Create cross-file workspace anchor links from any regex pattern.",
  "version": "0.0.6",
  "publisher": "yasuraok",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "link",
    "pattern",
    "navigation",
    "reference",
    "uuid"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yasuraok/vscode-regex-anchor"
  },
  "homepage": "https://github.com/yasuraok/vscode-regex-anchor/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/yasuraok/vscode-regex-anchor/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regex-anchor.refresh",
        "title": "Regex Anchor: Refresh Link Index"
      }
    ],
    "configuration": {
      "title": "Regex Anchor",
      "properties": {
        "regexAnchor.rules": {
          "type": "array",
          "default": [],
          "description": "Configuration for link rules",
          "items": {
            "type": "object",
            "properties": {
              "from": {
                "type": "array",
                "description": "Source patterns for the links",
                "items": {
                  "type": "object",
                  "properties": {
                    "includes": {
                      "type": "string",
                      "description": "Glob pattern for files containing link texts"
                    },
                    "patterns": {
                      "type": "string",
                      "description": "Regex pattern to match link texts in files"
                    }
                  },
                  "required": [
                    "includes",
                    "patterns"
                  ]
                }
              },
              "to": {
                "type": "array",
                "description": "Target patterns for the links",
                "items": {
                  "type": "object",
                  "properties": {
                    "includes": {
                      "type": "string",
                      "description": "Glob pattern for destination files"
                    },
                    "patterns": {
                      "type": "string",
                      "description": "Regex pattern to match link destinations"
                    },
                    "hoverPreview": {
                      "type": "object",
                      "default": {
                        "linesBefore": 2,
                        "linesAfter": 2
                      },
                      "description": "Configuration for hover preview for this target",
                      "properties": {
                        "linesBefore": {
                          "type": "integer",
                          "default": 2,
                          "description": "Number of lines to show before the target line"
                        },
                        "linesAfter": {
                          "type": "integer",
                          "default": 2,
                          "description": "Number of lines to show after the target line"
                        }
                      }
                    }
                  },
                  "required": [
                    "includes",
                    "patterns"
                  ]
                }
              }
            },
            "required": [
              "from",
              "to"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild": "node ./esbuild.js",
    "pretest": "npm run compile",
    "test": "mocha out/test/suite/**/*.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.21",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.25.4",
    "mocha": "^11.5.0",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "glob": "^11.0.2"
  }
}
